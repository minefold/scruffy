#!/usr/bin/env ruby
# encoding: UTF-8
require 'bundler/setup'
Bundler.require :default

$:.unshift File.join File.dirname(__FILE__), '../lib'
require 'scruffy'

STDOUT.sync = true

while true
  boxes = Boxes.new(LocalCluster.new)
  pinkies = Pinkies.new(RedisBus.new)
  scruffy = Scruffy.new(RedisBus.new, boxes, pinkies)
  
  scruffy.sweep!
  # scruffy.report
  
  sleep 5
end
