#!/usr/bin/env ruby
# encoding: UTF-8
require 'bundler/setup'
Bundler.require :default

$:.unshift File.join File.dirname(__FILE__), '../lib'
require 'minefold'
require 'scruffy'
require 'pry'

STDOUT.sync = true
EM.epoll

module Scruffy
  EM.run do
    RedisUniverse.collect do |universe|
      EM.stop
      @allocator = WorldAllocator.new(universe, [])
      binding.pry
    end
  end
end